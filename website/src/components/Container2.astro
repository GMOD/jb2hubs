---
import Breadcrumbs from './Breadcrumbs.astro'

const { className } = Astro.props
---

<div class="container">
  <div class={`content ${className}`}>
    <Breadcrumbs />
    <slot />
  </div>
</div>

<style>
  .container {
    padding: 1rem;
  }

  .content {
    max-width: 90%;
    margin: 0 auto;
  }
</style>
