---
import { SEO } from 'astro-seo'

import type { Props } from '@astrojs/starlight/props'

import Header from '../components/Header.astro'
import '../styles/global.css'

const { frontmatter } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-D9CD3J2V31"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag('js', new Date())

      gtag('config', 'G-D9CD3J2V31')
    </script>
    <SEO
      title={frontmatter?.title ?? 'JBrowse 2 genome browser hubs'}
      description={frontmatter?.description ?? 'JBrowse 2 genome browser hubs'}
    />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
  </body>
</html>
